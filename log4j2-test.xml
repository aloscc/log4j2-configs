<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="defaultPattern">[%highlight{%-5level}] %d{DEFAULT} %c{1}.%M() -
            %msg%n%throwable{short.lineNumber}
        </Property>
        <Property name="logStashPattern">
            [%d{ISO8601}][%-5p][%-25c]%notEmpty{[%X{pipeline.id}]}%notEmpty{[%X{plugin.id}]} %m%n]
        </Property>
    </Properties>

    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="${defaultPattern}}"/>
        </Console>

        <Socket name="socket" host="${env:LOG_HOST}" port="${env:LOG_PORT}"
                reconnectionDelayMillis="5000">
            <PatternLayout pattern="${logStashPattern}"/>
        </Socket>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="socket"/>
        </Root>
    </Loggers>
</Configuration>
